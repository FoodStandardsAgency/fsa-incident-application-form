{% extends "layout.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/select/macro.njk" import govukSelect %}

{% block content %}

<form method="POST" action="">

    {% call govukFieldset({
        legend: {
            text: i18n.sections.yourDetails,
            classes: "govuk-fieldset__legend--l",
            isPageHeading: true
        }
    }) %}

    {{ govukSelect({
        id: "notifier-type",
        name: "notifier-type",
        label: {
            text: i18n.notifierType.label
        },
        items: [
            {
                value: "published",
                text: "Recently published"
            },
            {
                value: "updated",
                text: "Recently updated",
                selected: true
            },
            {
                value: "views",
                text: "Most views"
            },
            {
                value: "comments",
                text: "Most comments"
            }
        ],
        errorMessage: {
            text: errors and errors['notifier-type'] and errors['notifier-type'].msg
        }
    }) }}

    {{ govukInput({
        label: {
            text: "Contact Name"
        },
        classes: "govuk-!-width-two-thirds",
        id: "contact-name",
        name: "contact-name",
        errorMessage: {
            text: errors and errors['contact-name'] and errors['contact-name'].msg
        }
    }) }}

    {{ govukInput({
        label: {
            text: "Position"
        },
        classes: "govuk-!-width-two-thirds",
        id: "position",
        name: "position",
        errorMessage: {
            text: errors and errors['position'] and errors['position'].msg
        }
    }) }}

    {{ govukInput({
        label: {
            text: "Organisation"
        },
        classes: "govuk-!-width-two-thirds",
        id: "organisation",
        name: "organisation",
        errorMessage: {
            text: errors and errors['contact-name'] and errors['contact-name'].msg
        }
    }) }}

    {% endcall %}
</form>

{% endblock %}
